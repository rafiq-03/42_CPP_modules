FLAGS= -Wall -Wextra -Werror -std=c++98 #-fsanitize=address
CC = c++
NAME= DiamondTrap
HEADER= $(addprefix include/, \
						ClapTrap.hpp\
						FragTrap.hpp\
						ScavTrap.hpp \
						DiamondTrap.hpp)
SRC= $(addprefix src/, \
						main.cpp \
						ClapTrap.cpp \
						FragTrap.cpp \
						ScavTrap.cpp \
						DiamondTrap.cpp)

OBJ=$(SRC:.cpp=.o)

all:$(NAME)

$(NAME):$(OBJ)
	$(CC) $(FLAGS) $(OBJ) -o $(NAME)

%.o:%.cpp $(HEADER)
	$(CC) $(FLAGS) -c $< -o $@

clean:
	rm -rf $(OBJ)
fclean:clean
	rm -rf $(NAME)
re:
	@make fclean
	@make all
	
